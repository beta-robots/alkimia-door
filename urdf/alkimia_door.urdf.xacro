<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="alkimia_door">

	<xacro:property name="pi" value="3.1415926535897931" />
	<xacro:property name="coupleFins" value="false" />

	<!-- FIN model -->
	<xacro:macro name="fin" params="parent name position orientation isCoupled ratio">

		<!-- TOP FIN -->
		<joint name="${name}_top_joint" type="revolute">
			<origin xyz="${position}" rpy="${orientation}" />
			<parent link="${parent}"/>
			<child link="${name}_top_fin"/>
			<axis xyz="1 0 0" />
			<limit lower="${0*pi/180}" upper="${85*pi/180}" effort="60" velocity="10"/>
		</joint>

		<link name="${name}_top_fin">
			<inertial>
				<origin xyz="-0.1 -0.55 0.01" rpy="0 0 0"/>
				<mass value="2.0"/>
				<inertia
				ixx="2.6" ixy="0.0" ixz="0.0"
				iyy="0.06" iyz="0.0"
				izz="2.6"/>
			</inertial>
			<visual>
				<origin xyz="0 0 0" rpy="0 0 0" />
				<geometry>
					<mesh filename="package://alkimia_door/urdf/meshes/top_fin.stl" scale=" .001 .001 .001" />
					<!-- box size="1.0 0.01 0.3"/ -->
				</geometry>
				<material name="Brown">
					<color rgba="0.545 0.27 0.07 1.0"/>
				</material>
			</visual>
			<collision>
				<origin xyz="-0.1 -0.55 0.01" rpy="0 0 0" />
				<geometry>
					<!-- mesh filename="package://alkimia_door/urdf/meshes/top_fin.stl" scale=" .001 .001 .001" / -->
					<box size="0.2 1.1 0.02"/>
				</geometry>
			</collision>
		</link>

		<!-- BOTTOM FIN -->
		<joint name="${name}_bottom_joint" type="revolute">
			<origin xyz="0.0 -1.11 0.0" rpy="-1.57 0 -1.57" />
			<parent link="${name}_top_fin"/>
			<child link="${name}_bottom_fin"/>
			<axis xyz="0 0 -1" />
			<limit lower="${0*pi/180}" upper="${160*pi/180}" effort="60" velocity="10"/>

			<xacro:if value="${isCoupled}">
				<mimic joint="${name}_top_joint" multiplier="${ratio}"/>
			</xacro:if>
		</joint>

		<link name="${name}_bottom_fin">
			<inertial>
				<origin xyz="0.35 -0.01 -0.1" rpy="0 0 0"/>
				<mass value="1.0"/>
				<inertia
				ixx="0.03" ixy="0.0" ixz="0.0"
				iyy="1.3" iyz="0.0"
				izz="1.3"/>
			</inertial>
			<visual>
				<origin xyz="0.07 0.12 -0.017" rpy="0 0 0" />
				<geometry>
					<mesh filename="package://alkimia_door/urdf/meshes/bottom_fin.stl" scale=" .001 .001 .001" />
					<!-- box size="1.0 0.01 0.3"/ -->
				</geometry>
				<material name="Brown">
					<color rgba="0.545 0.27 0.07 1.0"/>
				</material>
			</visual>
			<collision>
				<origin xyz="0.65 -0.01 -0.1" rpy="0 0 0" />
				<geometry>
					<!-- mesh filename="package://alkimia_door/urdf/meshes/bottom_fin.stl" scale=" .001 .001 .001" / -->
					<box size="1.3 0.02 0.2"/>
				</geometry>
			</collision>
		</link>

		<transmission name="${name}_top_fin_trans">
			<type>transmission_interface/SimpleTransmission</type>
			<joint name="${name}_top_joint">
				<hardwareInterface>EffortJointInterface</hardwareInterface>
			</joint>
			<actuator name="${name}_top_fin_motor">
				<mechanicalReduction>1</mechanicalReduction>
			</actuator>
		</transmission>

		<transmission name="${name}_bottom_fin_trans">
			<type>transmission_interface/SimpleTransmission</type>
			<joint name="${name}_bottom_joint">
				<hardwareInterface>EffortJointInterface</hardwareInterface>
			</joint>
			<actuator name="${name}_bottom_fin_motor">
				<mechanicalReduction>1</mechanicalReduction>
			</actuator>
		</transmission>

	</xacro:macro>

	<link name="world"/>

	<joint name="anchor_joint1" type="fixed">
		<origin xyz="0 0 0" rpy="0 0 0"/>
		<parent link="world"/>
		<child link="Iprofile1"/>
	</joint>

	<link name="Iprofile1">
		<inertial>
			<origin xyz="0 0 -0.1" rpy="0 0 0"/>
			<mass value="50.0"/>
			<inertia
			ixx="1.0" ixy="0.0" ixz="0.0"
			iyy="1.0" iyz="0.0"
			izz="1.0"/>
		</inertial>
		<visual>
			<origin xyz="0 0 0" rpy="0.0 0 0"/>
			<geometry>
				<mesh filename="package://alkimia_door/urdf/meshes/roof.stl" scale=" .001 .001 .001" />
				<!-- box size="0.2 0.2 5.1"/ -->
			</geometry>
			<material name="Gray">
				<color rgba="0.5 0.5 0.5 1.0"/>
			</material>
		</visual>
		<collision>
			<origin xyz="-0.1 -4 -0.1" rpy="0.0 0 0"/>
			<geometry>
				<box size="0.2 8 0.2"/>
			</geometry>
		</collision>
	</link>

	<joint name="anchor_joint2" type="fixed">
		<origin xyz="0 0 0.3" rpy="0 0 0"/>
		<parent link="world"/>
		<child link="Iprofile2"/>
	</joint>

	<link name="Iprofile2">
		<inertial>
			<origin xyz="0 0 -0.1" rpy="0 0 0"/>
			<mass value="50.0"/>
			<inertia
			ixx="1.0" ixy="0.0" ixz="0.0"
			iyy="1.0" iyz="0.0"
			izz="1.0"/>
		</inertial>
		<visual>
			<origin xyz="0 0 0" rpy="0.0 0 0"/>
			<geometry>
				<mesh filename="package://alkimia_door/urdf/meshes/roof.stl" scale=" .001 .001 .001" />
				<!-- box size="0.2 0.2 5.1"/ -->
			</geometry>
			<material name="Gray">
				<color rgba="0.5 0.5 0.5 1.0"/>
			</material>
		</visual>
		<collision>
			<origin xyz="-0.1 -4 -0.1" rpy="0.0 0 0"/>
			<geometry>
				<box size="0.2 8 0.2"/>
			</geometry>
		</collision>
	</link>

	<xacro:fin parent="Iprofile1" name="fin1" position="0.11 -0.13 -0.2" orientation="0 1.57 1.57" isCoupled="${coupleFins}" ratio="2"/>

	<xacro:fin parent="Iprofile2" name="fin2" position="0.11 -0.13 -0.2" orientation="0 1.57 1.57" isCoupled="${coupleFins}" ratio="2"/>

